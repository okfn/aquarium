extends layout

block content
  .container
    .row
      .panel.panel-primary
        .panel-heading 
          h2.panel-title=gettext('Reports')
        - if (!currentUser.admin)
          .panel-footer
            .row
              .col-md-12
                a.btn.btn-default(href='/reports/new')=gettext("Add Report")
        .list-group
          - each report in reports
            include _report
