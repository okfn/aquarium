extends layout

block content
  .container
    .row
      .table-responsive
        table.table
          thead
            tr
              th=gettext('Country')
              th=gettext("Pre-Budget Statement")
              th=gettext("Executive's Budget Proposal")
              th=gettext("Enacted Budget")
              th=gettext("Citizens Budget")
              th=gettext("In-Year Reports")
              th=gettext("Mid-year Review")
              th=gettext("Year-End Report")
              th=gettext("Audit Report")
          tbody
            - each country in countries
              tr.lead
                td=gettext(country.country)
                - each flag in country.flags
                  td
                    - if (flag)
                      i.glyphicon.glyphicon-ok-sign.text-success
                    - else if (flag === false)
                      i.glyphicon.glyphicon-remove-sign.text-danger
                    - else
                      i.glyphicon.glyphicon-question-sign.text-muted
