extends layout

block content
  .container
    .row
      .panel.panel-primary
        .panel-heading 
          h2.panel-title Sites
        .list-group
        - each site in sites
          .list-group-item
            h4.list-group-item-heading= site.url
            .list-group-item-text
              .row
                .col-md-12
                  =site.last_modified
        .panel-footer
          .row
            .col-md-12
              a.btn.btn-default(href='/sites/new') Add Site

