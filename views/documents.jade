extends layout

block content
  .container
    .row
      .panel.panel-primary
        .panel-heading 
          h2.panel-title=gettext('Sites')
        .list-group
          - each doc in docs
            .list-group-item
              h4.list-group-item-heading
                a(href='/documents/#{doc._id}')
                  - if (doc.approved) 
                    i.text-success.glyphicon.glyphicon-ok-sign
                  - else if (doc.approved === false)
                    i.text-danger.glyphicon.glyphicon-remove-sign
                  - else
                    i.text-info.glyphicon.glyphicon-question-sign
                  | &nbsp;
                  =doc.title
                  | &nbsp;
                  .label.label-default=doc.type
              .list-group-item-text
                .row
                  .col-md-3.col-md-offset-1
                    a(href=doc.url, target="_blank")=doc.url
                  .col-md-4=format('Received %s', [doc.date_received])
                  .col-md-4=format('Last modified %s', [moment(doc.last_modified).format('HH:mm DD MMM YYYY')])
        - if (!user.admin)
          .panel-footer
            .row
              .col-md-12
                a.btn.btn-default(href='/documents/new')=gettext("Add Document")

