extends layout

block content
  .container
    .row
      .panel.panel-primary
        .panel-heading 
          h2.panel-title Sites
        .list-group
          - each doc in docs
            .list-group-item
              h4.list-group-item-heading=doc.title
              .list-group-item-text
                .row
                  .col-md-8
                    | Last modified #{moment(doc.last_modified).format('LLLL')}
        .panel-footer
          .row
            .col-md-12
              a.btn.btn-default(href='/documents/new') Add Document

