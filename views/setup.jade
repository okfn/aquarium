extends layout

block content
  .container
    .row
      .col-md-12
        form#setup(role='form', action='/setup', method='POST')
          .form-group
              label=gettext('Email address')
              input.form-control(name='username', type='email', placeholder=gettext('Enter email'), autofocus=true, autocomplete='off')
          .form-group
            label=gettext('Password')
            input.form-control(name='password', type='password', placeholder=gettext('Password'))
          .form-group
            label=gettext('Confirm Password')
            input.form-control(name='confirm', type='password', placeholder=gettext('Confirm password'))
          button.btn.btn-danger(type='submit', disabled="disabled")=gettext('Create Admin User')
