extends layout

block content
  .container
    .row
      .panel.panel-primary
        .panel-heading 
          h2.panel-title User List
        .list-group
        - each user in users
          .list-group-item
            h4.list-group-item-heading= user.name
            .list-group-item-text
              .row
                .col-md-4
                  a(href="mailto:#{user.username}", target="_blank")=user.username
                .col-md-4
                  a(href="https://www.google.co.nz/maps/preview#!q=#{user.country}", target="_blank")=user.country
                .col-md-4
                  | Tracking #{user.sites.length} sites
        .panel-footer
          .row
            .col-md-12
              a.btn.btn-default(href='/users/new') Add User
